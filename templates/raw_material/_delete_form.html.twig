<form method="post" action="{{ path('raw_material_delete', {'id': raw_material.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ raw_material.id) }}">
    <button class="btn btn-danger mb-3" style="float:right">Delete</button>
</form>
